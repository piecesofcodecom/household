{{#each gear as |item id|}}
<details class='item' data-item-id='{{item._id}}' class="default square">
		<summary>
      <img  class="item-summary-title"
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
      <span class="item-summary-title" style="opacity: 1.0;">{{item.name}}</span>
          <label><a style="float:right; margin-left: 5px;" 
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='Item'}}'
          >
            <i class='fas fa-trash'></i>
          </a></label>
          <label><a style=" float:right; margin-left: 5px;" 
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='Item'}}'
          >
            <i class='fas fa-edit'></i>
          </a></label>
          <label>
            <span class='' style="float:right; margin-left: 5px;margin-right: 15px">
              {{item.system.price}}
            <i style="color: #d49d08" class="fa-solid fa-coins"></i>
            </span>
            </label>
    </summary>
    <p><b>{{{item.system.trait}}}</b></p>
		{{{item.system.description}}}
	</details>
  {{/each}}