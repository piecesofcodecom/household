<!-- Terrible Terrible Things -->
<h2 class="characteristic-title">{{localize "HOUSEHOLD.TTT.long"}}</h2>
<div class="flexrow">
  {{#numLoop 5}}

  {{#when ../system.ttt 'gteq' this}}
  <input class="input-hidden" type="radio" id="ttt-{{this}}-{{../actor.id}}" value="{{reduceBy this 1}}"
    name="system.ttt" data-dtype="Number" data-path="system.ttt">
  <div class="ttt-icon">
    <label style=" align-items: center;" for="ttt-{{this}}-{{../actor.id}}">
      <img class="custom-edit" width="28" height="28" style="border: 0px" src="/systems/household/assets/sheet/ttt{{this}}-filled.svg" data-value="{{reduceBy this 1}}" data-dtype="Number" data-path="system.ttt">
    </label>
  </div>
  {{else}}
  <input class="input-hidden" type="radio" id="ttt-{{this}}-{{../actor.id}}" value="{{this}}" name="system.ttt"
    data-dtype="Number" data-path="system.ttt">
  <div class="ttt-icon">
    <label style=" align-items: center;" for="ttt-{{this}}-{{../actor.id}}">
    <img class="custom-edit" width="28" height="28" data-value="{{this}}" data-dtype="Number" data-path="system.ttt"
        style="border: 0px" src="/systems/household/assets/sheet/ttt{{this}}.svg">
    </label>
  </div>
  {{/when}}
  {{/numLoop}}
</div>
