<!-- conditions -->
<h2 class="characteristic-title" style="text-align: center;">{{localize "HOUSEHOLD.Conditions.long"}}</h2>
<div class="conditions-grid flex-group-center">
  <input id="condition-embarrassed-{{actor.id}}" style="display: none" type="checkbox"
    name="system.conditions.embarrassed" value="{{system.conditions.embarrassed}}" data-dtype="Boolean" {{doCheck
    system.conditions.embarrassed}}>
  <label class="resource-label condition-icon" for="condition-embarrassed-{{actor.id}}">
    {{#if system.conditions.embarassed}}
    <i class="fa-solid fa-heart condition-icon-heart"></i>
    {{else}}
    <i class="fa-light fa-heart condition-icon-heart"></i>
    {{/if}}
    <span>{{localize "HOUSEHOLD.Conditions.Embarrassed"}}</span></label>

  <input id="condition-frightened-{{actor.id}}" style="display: none" type="checkbox"
