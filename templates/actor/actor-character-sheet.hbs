<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off" 
>

  {{!-- Sheet Header --}}
  <header class="sheet-header" >
    <img class="profile-img" style="border: 0px" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields" >
      <h1 class="charname"><input class="char-name" name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-4col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}

        <div class="resource__group">
            <input class="form__field" type="text" name="system.folk" value="{{system.folk}}" placeholder="" data-dtype="String"/>
            <label class="form__label" for="system.attributes.level.value" >{{localize "HOUSEHOLD.Folk.long"}}</label>
        </div>

        <div class="resource__group">
            <input class="form__field" type="text" name="system.homeland" value="{{system.homeland}}"  placeholder="" data-dtype="String"/>
            <label class="form__label" for="system.attributes.level.value" class="resource-label">{{localize "HOUSEHOLD.Homeland.long"}}</label>
        </div>

        <div class="resource__group">
            <input class="form__field" type="text" name="system.profession" value="{{system.profession}}"  placeholder="" data-dtype="String"/>
            <label class="form__label" for="system.attributes.level.value" class="resource-label">{{localize "HOUSEHOLD.Profession.long"}}</label>
        </div>

        <div class="resource__group">
            <input class="form__field" type="text" name="system.vocation" value="{{system.vocation}}"  placeholder="" data-dtype="String"/>
            <label class="form__label" for="system.attributes.level.value" class="resource-label">{{localize "HOUSEHOLD.Vocation.long"}}</label>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs custom" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="general" title="{{localize "HOUSEHOLD.SheetLabels.General"}}"><i class="fa-solid fa-house"></i></a>
    <a class="item" data-tab="others" title="{{localize "HOUSEHOLD.SheetLabels.Others"}}"><i class="fa-solid fa-handshake"></i></a>
    <a class="item" data-tab="items" title="{{localize "HOUSEHOLD.SheetLabels.Equipaments"}}"><i class="fa-solid fa-gear"></i></a>
    <a class="item" data-tab="description" title="{{localize "HOUSEHOLD.SheetLabels.Chapter"}}"><i class="fa-solid fa-notes"></i></a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body ">

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="general">
     {{>  "systems/household/templates/actor/parts/actor-tab-general.hbs" }}
    </div>

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="others">
      {{> "systems/household/templates/actor/parts/actor-tab-others.hbs"}}
      </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      <h2 class="characteristic-title">{{localize "HOUSEHOLD.Memories.long"}}</h2>
      <div class="resource">
          <label class="resource-label">{{localize "HOUSEHOLD.Prologue.long"}}</label>
          <input type="text" name="system.chapters.prologue" value="{{system.chapters.prologue}}" data-dtype="String" />
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "HOUSEHOLD.ChapterI.long"}}</label>
          <input type="text" name="system.chapters.chapter1" value="{{system.chapters.chapter1}}" data-dtype="String" />
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "HOUSEHOLD.ChapterII.long"}}</label>
          <input type="text" name="system.chapters.chapter2" value="{{system.chapters.chapter2}}" data-dtype="String" />
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "HOUSEHOLD.ChapterIII.long"}}</label>
          <input type="text" name="system.chapters.chapter3_0" value="{{system.chapters.chapter3_0}}" data-dtype="String" />
          <input type="text" name="system.chapters.chapter3_1" value="{{system.chapters.chapter3_1}}" data-dtype="String" />
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "HOUSEHOLD.ChapterIV.long"}}</label>
          <input type="text" name="system.chapters.chapter4_0" value="{{system.chapters.chapter4_0}}" data-dtype="String" />
          <input type="text" name="system.chapters.chapter4_1" value="{{system.chapters.chapter4_1}}" data-dtype="String" />
        </div>
        <div class="resource">
          <label class="resource-label">{{localize "HOUSEHOLD.ChapterV.long"}}</label>
          <input type="text" name="system.chapters.chapter5_0" value="{{system.chapters.chapter5_0}}" data-dtype="String" />
          <input type="text" name="system.chapters.chapter5_1" value="{{system.chapters.chapter5_1}}" data-dtype="String" />
        </div>
        <h2 class="characteristic-title">{{localize "HOUSEHOLD.Experience.long"}}</h2>
      {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to the rollData property. --}}
      {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    
    <div class="tab items" data-group="primary" data-tab="items">
      <div class="flexrow flexcenter">
        <div class="flexcenter">
          <h3 style="text-align: center" class="characteristic-description">{{localize "HOUSEHOLD.Wealth.long"}}</h3>
        </div>
        <div class="resource">
          <input type="text" name="system.wealth" value="{{system.wealth}}" data-dtype="String" />
        </div>
        
        <div class="flexcenter">
          <h3 class="characteristic-description" style="text-align: center">{{localize "HOUSEHOLD.Coins.long"}}</h3>
        </div>
        <div class="resource">
          <input type="text" name="system.coins" value="{{system.coins}}" data-dtype="String" />
        </div>
        
      </div>
      <h2 class="characteristic-title">{{localize "HOUSEHOLD.SheetLabels.General"}}</h2>
       {{> "systems/household/templates/actor/parts/actor-list-items.hbs" items=gear type='equipament'}}
      <br />
      <h2 class="characteristic-title">{{localize "HOUSEHOLD.Weapons.long"}}</h2>
       
       {{> "systems/household/templates/actor/parts/actor-list-items.hbs" items=weapons type='weapon'}}
      <br />
      <h2 class="characteristic-title">{{localize "HOUSEHOLD.Gadgets.long"}}</h2>
      {{> "systems/household/templates/actor/parts/actor-list-items.hbs" items=gadgets type='equipament'}}
    </div>
  </section>
</form>

{{log system}}

