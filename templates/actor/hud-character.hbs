        <div class="condition editValue" data-character-id="{{@root/id}}" data-dtype="Boolean" data-path="system.conditions.poisoned">
            <i class="fa-{{#if conditions.poisoned}}solid{{else}}light{{/if}} fa-circle"></i>&nbsp;{{localize "HOUSEHOLD.Conditions.Poisoned"}}</div>
        
        <div class="condition editValue" data-character-id="{{@root/id}}" data-dtype="Boolean" data-path="system.conditions.broken">
            <i class="fa-{{#if conditions.broken}}solid{{else}}light{{/if}} fa-circle"></i>&nbsp;{{localize "HOUSEHOLD.Conditions.Broken"}}</div>
        </div>

        

         {{#each items as |items kind|}}
            {{#ifNotEmpty items}}
                <div class="actions-category">
                     <h2 class="characteristic-title" style="text-align: center;">{{localize (concat "HOUSEHOLD." kind ".long")}}</h2>
                    <div class="action-list">
                        {{#each items as |item|}}
                            <div class="action" >
                                <div class="item-left item" data-tooltip="{{ item.system.description }}" data-action="show" data-item-id="{{ item.id }}" data-character-id="{{@root/id}}">
                                    <img src="{{ item.img }}" />

                                    <span>{{trimString item.name 20}}
                                        {{#if (eq item.type "move")}}
                                            {{#each item.system.suits as | value key|}}
                                                {{#if value}}
                                                    <i style="color: {{getFieldColor key}}" class="fa-solid fa-{{getSuitFromField key}}"></i>
                                                {{/if}}
                                            {{/each}}
                                        {{/if}}
                                    </span>
                                </div>
                                <div class="item-right">
                                    &nbsp; 
                                    {{#if (eq item.type "move")}}
                                        {{#if item.system.exhausted}}
                                            <a data-type="{{ item.type }}" data-action="use" data-item-id="{{ item.id }}" data-character-id="{{@root/id}}"
                                                class="action item" title="{{ item.name }}">
                                                <i style="color: red" class="fa-regular fa-toggle-large-off"></i>
                                            </a>
                                        {{else}}
                                        <a data-type="{{ item.type }}" data-action="use" data-item-id="{{ item.id }}" data-character-id="{{@root/id}}"
                                                class="action item" title="{{ item.name }}">
                                                <i style="color: green" class="fa-regular fa-toggle-large-on"></i>
                                            </a>
                                        {{/if}}
                                    {{/if}}
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
