        <div class="condition editValue" data-character-id="{{@root/id}}" data-dtype="Boolean" data-path="system.conditions.hurt">
            <i class="fa-{{#if conditions.hurt}}solid{{else}}light{{/if}} fa-club" style="color: green"></i>&nbsp;{{localize "HOUSEHOLD.Conditions.Hurt"}}</div>
        
        <div class="condition editValue" data-character-id="{{@root/id}}" data-dtype="Boolean" data-path="system.conditions.frightened">
            <i class="fa-{{#if conditions.frightened}}solid{{else}}light{{/if}} fa-spade" style="color: black"></i>&nbsp;{{localize "HOUSEHOLD.Conditions.Frightened"}}</div>
        
        <div class="condition editValue" data-character-id="{{@root/id}}" data-dtype="Boolean" data-path="system.conditions.tired">
